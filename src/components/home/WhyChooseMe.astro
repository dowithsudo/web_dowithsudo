---
// src/components/home/WhyChooseMe.astro
const { isEn } = Astro.props;

const content = {
  title: isEn ? "Why Choose Me?" : "Mengapa Memilih Saya?",
  subtitle: isEn 
    ? "Benefits of working with a dedicated IT professional." 
    : "Keuntungan bekerja dengan profesional IT yang berdedikasi.",
};

const reasons = [
  {
    icon: "clock",
    title: isEn ? "Quick Response Time" : "Waktu Respon Cepat",
    description: isEn 
      ? "Get help when you need it. Fast response to minimize your business downtime." 
      : "Dapatkan bantuan saat Anda membutuhkannya. Respon cepat untuk meminimalkan waktu henti bisnis Anda.",
  },
  {
    icon: "award",
    title: isEn ? "Proven Experience" : "Pengalaman Terbukti",
    description: isEn 
      ? "Years of hands-on experience with diverse IT environments and challenges." 
      : "Bertahun-tahun pengalaman langsung dengan berbagai lingkungan dan tantangan IT.",
  },
  {
    icon: "banknote",
    title: isEn ? "Flexible Pricing" : "Harga Fleksibel",
    description: isEn 
      ? "On-demand, monthly, or project-based. Choose what works for your budget." 
      : "Sesuai permintaan, bulanan, atau berbasis proyek. Pilih yang sesuai dengan anggaran Anda.",
  },
  {
    icon: "users",
    title: isEn ? "Personal Attention" : "Perhatian Personal",
    description: isEn 
      ? "Direct communication with me. No call centers, no waiting queues." 
      : "Komunikasi langsung dengan saya. Tanpa call center, tanpa antrean tunggu.",
  },
];

const icons: { [key: string]: string } = {
  clock: '<circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/>',
  award: '<path d="M12 15l-3.5 2 1-4-3-3 4-.5L12 2l1.5 4.5 4 .5-3 3 1 4L12 15z"/>', // Ikon bintang/award lebih clean
  banknote: '<rect width="20" height="12" x="2" y="6" rx="2"/><circle cx="12" cy="12" r="2"/><path d="M6 12h.01M18 12h.01"/>',
  users: '<path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>'
};
---

<section class="section-padding bg-secondary">
  <div class="container-custom">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-5xl font-bold text-foreground mb-4">
        {content.title}
      </h2>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        {content.subtitle}
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-x-12 gap-y-10 max-w-5xl mx-auto">
      {reasons.map((reason) => (
        <div class="flex gap-5 items-start">
          <div class="shrink-0 w-12 h-12 rounded-lg bg-[#e6f4f1] flex items-center justify-center">
            <svg 
              xmlns="http://www.w3.org/2000/svg" 
              width="24" height="24" 
              viewBox="0 0 24 24" 
              fill="none" 
              stroke="#26a69a" stroke-width="2" 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              set:html={icons[reason.icon]}
            />
          </div>
          <div>
            <h3 class="text-xl font-bold text-foreground mb-2">
              {reason.title}
            </h3>
            <p class="text-muted-foreground leading-relaxed text-sm">
              {reason.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>