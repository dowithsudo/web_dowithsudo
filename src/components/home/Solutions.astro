---
// src/components/home/Solutions.astro
const { isEn } = Astro.props;

const content = {
  title: isEn ? "The Solution You Need" : "Solusi Yang Anda Butuhkan",
  subtitle: isEn 
    ? "Professional IT support that adapts to your business needs and budget." 
    : "Dukungan IT profesional yang beradaptasi dengan kebutuhan dan anggaran bisnis Anda.",
};

const solutions = [
  {
    icon: "zap",
    title: isEn ? "Fast Response" : "Respon Cepat",
    description: isEn 
      ? "Quick response times to minimize downtime and get you back on track." 
      : "Waktu respon cepat untuk meminimalkan downtime dan membuat bisnis Anda kembali berjalan.",
  },
  {
    icon: "shield",
    title: isEn ? "Proactive Security" : "Keamanan Proaktif",
    description: isEn 
      ? "Prevent issues before they happen with regular monitoring and maintenance." 
      : "Mencegah masalah sebelum terjadi dengan pemantauan dan pemeliharaan rutin.",
  },
  {
    icon: "headphones",
    title: isEn ? "On-Demand Support" : "Dukungan On-Demand",
    description: isEn 
      ? "Pay only when you need help. No contracts, no commitments." 
      : "Bayar hanya saat Anda butuh bantuan. Tanpa kontrak, tanpa komitmen panjang.",
  },
  {
    icon: "check",
    title: isEn ? "Expert Solutions" : "Solusi Ahli",
    description: isEn 
      ? "Professional expertise without the cost of a full-time IT department." 
      : "Keahlian profesional tanpa biaya besar seperti departemen IT penuh waktu.",
  },
];

const icons: { [key: string]: string } = {
  zap: '<path d="M13 2 3 14h9l-1 8 10-12h-9l1-8z"/>',
  shield: '<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/>',
  headphones: '<path d="M3 18v-6a9 9 0 0 1 18 0v6"/><path d="M21 19a2 2 0 0 1-2 2h-1a2 2 0 0 1-2-2v-3a2 2 0 0 1 2-2h3z"/><path d="M3 19a2 2 0 0 0 2 2h1a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H3z"/>',
  check: '<polyline points="20 6 9 17 4 12"/>'
};
---

<section class="section-padding bg-primary text-primary-foreground">
  <div class="container-custom">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-5xl font-bold mb-4">
        {content.title}
      </h2>
      <p class="text-lg text-primary-foreground/70 max-w-2xl mx-auto">
        {content.subtitle}
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      {solutions.map((solution) => (
        <div class="p-6 bg-primary-foreground/5 rounded-lg border border-primary-foreground/10 flex flex-col items-start">
          {/* Kotak Ikon dengan Aksen Teal dari Lovable */}
          <div class="w-12 h-12 rounded-lg bg-accent/20 flex items-center justify-center mb-4">
            <svg 
              xmlns="http://www.w3.org/2000/svg" 
              width="24" height="24" 
              viewBox="0 0 24 24" 
              fill="none" 
              stroke="currentColor" 
              stroke-width="2" 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              class="text-accent"
              set:html={icons[solution.icon]}
            />
          </div>
          <h3 class="text-xl font-bold mb-2 text-white">{solution.title}</h3>
          <p class="text-sm text-primary-foreground/70 leading-relaxed">
            {solution.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>