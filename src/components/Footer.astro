---
// src/components/Footer.astro
import Maskot from './Maskot.astro'; 
const { isEn } = Astro.props;

const currentYear = new Date().getFullYear();
const langPath = isEn ? "/en" : "/id";

const content = {
  description: isEn 
    ? "Professional IT support services for businesses of all sizes. On-demand, reliable, and affordable." 
    : "Layanan dukungan IT profesional untuk bisnis skala apa pun. On-demand, andal, dan terjangkau.",
  quickLinks: isEn ? "Quick Links" : "Tautan Cepat",
  legal: isEn ? "Legal" : "Hukum",
  contact: isEn ? "Contact" : "Kontak",
  menu: {
    home: isEn ? "Home" : "Beranda",
    services: isEn ? "Services" : "Layanan",
    blog: isEn ? "Blog" : "Blog",
    about: isEn ? "About Us" : "Tentang Kami",
    contact: isEn ? "Contact" : "Kontak",
    terms: isEn ? "Terms of Service" : "Ketentuan Layanan",
    privacy: isEn ? "Privacy Policy" : "Kebijakan Privasi",
  }
};
---

<footer class="bg-primary text-primary-foreground border-t border-primary-foreground/10">
  <div class="container-custom py-16 md:py-20">
    <div class="grid gap-12 md:grid-cols-2 lg:grid-cols-4 italic-none">
      
      {/* Kolom Pertama: Maskot & Brand */}
      <div class="space-y-6 flex flex-col items-center md:items-start text-center md:text-left">
        <div class="flex flex-col gap-2">
          <div class="animate-float-fancy drop-shadow-[0_10px_20px_rgba(38,166,154,0.4)]">
            <Maskot size={120} />
          </div>
          <a href={langPath} class="text-2xl font-bold tracking-tight mt-2 block">
            >_Do<span class="text-accent">withsudo</span>
          </a>
        </div>
        <p class="text-sm text-primary-foreground/70 leading-relaxed max-w-xs">
          {content.description}
        </p>
      </div>

      {/* Tautan Cepat */}
      <div class="space-y-6">
        <h4 class="font-bold text-lg">{content.quickLinks}</h4>
        <ul class="space-y-3 text-sm text-primary-foreground/70">
          <li><a href={langPath} class="hover:text-accent transition-colors">{content.menu.home}</a></li>
          <li><a href={`${langPath}/services`} class="hover:text-accent transition-colors">{content.menu.services}</a></li>
          <li><a href={`${langPath}/blog`} class="hover:text-accent transition-colors">{content.menu.blog}</a></li>
          <li><a href={`${langPath}/about`} class="hover:text-accent transition-colors">{content.menu.about}</a></li>
          <li><a href={`${langPath}/contact`} class="hover:text-accent transition-colors">{content.menu.contact}</a></li>
        </ul>
      </div>

      {/* Hukum (Sudah Terhubung ke Halaman Baru) */}
      <div class="space-y-6">
        <h4 class="font-bold text-lg">{content.legal}</h4>
        <ul class="space-y-3 text-sm text-primary-foreground/70">
          {/* Link ke /id/terms atau /en/terms */}
          <li>
            <a href={`${langPath}/terms`} class="hover:text-accent transition-colors">
              {content.menu.terms}
            </a>
          </li>
          {/* Link ke /id/privacy atau /en/privacy */}
          <li>
            <a href={`${langPath}/privacy`} class="hover:text-accent transition-colors">
              {content.menu.privacy}
            </a>
          </li>
        </ul>
      </div>

      <div class="space-y-6">
        <h4 class="font-bold text-lg">{content.contact}</h4>
        <ul class="space-y-4 text-sm text-primary-foreground/70">
          <li class="flex items-center gap-3">
             <a href="mailto:kamandanu.wijaya@gmail.com" class="hover:text-accent transition-colors">kamandanu.wijaya@gmail.com</a>
          </li>
          <li class="flex items-center gap-3">
             <a href="tel:+628122233129" class="hover:text-accent transition-colors">+62 812 2233 129</a>
          </li>
        </ul>
      </div>
    </div>
    
    <div class="mt-16 pt-8 border-t border-primary-foreground/10 text-center text-sm text-primary-foreground/50">
      <p>&copy; {currentYear} Dowithsudo. All rights reserved.</p>
    </div>
  </div>
</footer>