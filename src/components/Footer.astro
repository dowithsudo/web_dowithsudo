---
// src/components/Footer.astro
import Maskot from './Maskot.astro'; 
const { isEn } = Astro.props;

const currentYear = new Date().getFullYear();
const langPath = isEn ? "/en" : "/id";

const content = {
  description: isEn 
    ? "Professional IT support services for businesses of all sizes. On-demand, reliable, and affordable." 
    : "Layanan dukungan IT profesional untuk bisnis skala apa pun. On-demand, andal, dan terjangkau.",
  quickLinks: isEn ? "Quick Links" : "Tautan Cepat",
  legal: isEn ? "Legal" : "Hukum",
  contact: isEn ? "Contact" : "Kontak",
  menu: {
    home: isEn ? "Home" : "Beranda",
    services: isEn ? "Services" : "Layanan",
    blog: isEn ? "Blog" : "Blog",
    about: isEn ? "About Us" : "Tentang Kami",
    contact: isEn ? "Contact" : "Kontak",
    terms: isEn ? "Terms of Service" : "Ketentuan Layanan",
    privacy: isEn ? "Privacy Policy" : "Kebijakan Privasi",
  }
};
---

<footer class="bg-slate-950 text-white border-t border-slate-900">
  <div class="container-custom py-16 md:py-20">
    <div class="grid gap-12 md:grid-cols-2 lg:grid-cols-4 italic-none">
      
      {/* Kolom Pertama: Maskot & Brand */}
      <div class="space-y-6 flex flex-col items-center md:items-start text-center md:text-left">
        <div class="flex flex-col gap-2">
          <div class="animate-float-fancy drop-shadow-[0_10px_20px_rgba(38,166,154,0.4)]">
            <Maskot size={120} />
          </div>
          <a href={langPath} class="text-2xl font-bold tracking-tight mt-2 block text-white">
            >_Do<span class="text-emerald-400">withsudo</span>
          </a>
        </div>
        {/* Warna deskripsi dibuat lebih solid agar kontras tinggi */}
        <p class="text-sm text-slate-300 leading-relaxed max-w-xs">
          {content.description}
        </p>
      </div>

      {/* Tautan Cepat */}
      <div class="space-y-6">
        <h3 class="font-bold text-lg text-white">{content.quickLinks}</h3>
        <ul class="space-y-3 text-sm text-slate-300">
          <li><a href={langPath} class="hover:text-emerald-400 transition-colors">{content.menu.home}</a></li>
          <li><a href={`${langPath}/services`} class="hover:text-emerald-400 transition-colors">{content.menu.services}</a></li>
          <li><a href={`${langPath}/blog`} class="hover:text-emerald-400 transition-colors">{content.menu.blog}</a></li>
          <li><a href={`${langPath}/about`} class="hover:text-emerald-400 transition-colors">{content.menu.about}</a></li>
          <li><a href={`${langPath}/contact`} class="hover:text-emerald-400 transition-colors">{content.menu.contact}</a></li>
        </ul>
      </div>

      {/* Hukum */}
      <div class="space-y-6">
        <h3 class="font-bold text-lg text-white">{content.legal}</h3>
        <ul class="space-y-3 text-sm text-slate-300">
          <li>
            <a href={`${langPath}/terms`} class="hover:text-emerald-400 transition-colors">
              {content.menu.terms}
            </a>
          </li>
          <li>
            <a href={`${langPath}/privacy`} class="hover:text-emerald-400 transition-colors">
              {content.menu.privacy}
            </a>
          </li>
        </ul>
      </div>

      {/* Kontak */}
      <div class="space-y-6">
        <h3 class="font-bold text-lg text-white">{content.contact}</h3>
        <ul class="space-y-4 text-sm text-slate-300">
          <li class="flex items-center gap-3">
             <a href="mailto:kamandanu.wijaya@gmail.com" class="hover:text-emerald-400 transition-colors">kamandanu.wijaya@gmail.com</a>
          </li>
          <li class="flex items-center gap-3">
             <a href="tel:+628122233129" class="hover:text-emerald-400 transition-colors">+62 812 2233 129</a>
          </li>
        </ul>
      </div>
    </div>
    
    <div class="mt-16 pt-8 border-t border-slate-900 flex flex-col md:flex-row justify-between items-center gap-6 text-sm text-slate-400">
      <p>&copy; {currentYear} Dowithsudo. All rights reserved.</p>
      
      {/* Icon Sosial Media */}
      <div class="flex items-center gap-6">
        <a href="https://github.com/dowithsudo" target="_blank" rel="noopener noreferrer" class="hover:text-emerald-400 transition-colors" aria-label="GitHub">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg>
        </a>
        <a href="https://www.linkedin.com/in/ktwijaya/" target="_blank" rel="noopener noreferrer" class="hover:text-emerald-400 transition-colors" aria-label="LinkedIn">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect width="4" height="12" x="2" y="9"></rect><circle cx="4" cy="4" r="2"></circle></svg>
        </a>
        <a href="https://www.instagram.com/dowithsudo/" target="_blank" rel="noopener noreferrer" class="hover:text-emerald-400 transition-colors" aria-label="Instagram">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line></svg>
        </a>
      </div>
    </div>
</footer>