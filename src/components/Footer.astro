---
// src/components/Footer.astro
import Maskot from './Maskot.astro'; 
const { isEn } = Astro.props;

const currentYear = new Date().getFullYear();

const content = {
  description: isEn 
    ? "Professional IT support services for businesses of all sizes. On-demand, reliable, and affordable." 
    : "Layanan dukungan IT profesional untuk bisnis skala apa pun. On-demand, andal, dan terjangkau.",
  quickLinks: isEn ? "Quick Links" : "Tautan Cepat",
  legal: isEn ? "Legal" : "Hukum",
  contact: isEn ? "Contact" : "Kontak",
};
---

<footer class="bg-primary text-primary-foreground border-t border-primary-foreground/10">
  <div class="container-custom py-16 md:py-20">
    <div class="grid gap-12 md:grid-cols-2 lg:grid-cols-4 italic-none">
      
      {/* Kolom Pertama: Maskot Gede & Deskripsi */}
      <div class="space-y-6 flex flex-col items-center md:items-start text-center md:text-left">
        <div class="flex flex-col gap-2">
          {/* UKURAN DINAIKKAN KE 120 */}
          <div class="animate-float-fancy drop-shadow-[0_10px_20px_rgba(38,166,154,0.4)]">
            <Maskot size={120} />
          </div>
          
          <a href={isEn ? "/en" : "/id"} class="text-2xl font-bold tracking-tight mt-2 block">
            >_Do<span class="text-accent">withsudo</span>
          </a>
        </div>
        <p class="text-sm text-primary-foreground/70 leading-relaxed max-w-xs">
          {content.description}
        </p>
      </div>

      {/* Tautan Cepat */}
      <div class="space-y-6">
        <h4 class="font-bold text-lg">{content.quickLinks}</h4>
        <ul class="space-y-3 text-sm text-primary-foreground/70">
          <li><a href={isEn ? "/en" : "/id"} class="hover:text-accent transition-colors">Home</a></li>
          <li><a href="#services" class="hover:text-accent transition-colors">Services</a></li>
          <li><a href="/id/blog" class="hover:text-accent transition-colors">Blog</a></li>
          <li><a href="/id/about" class="hover:text-accent transition-colors">About</a></li>
          <li><a href="/id/contact" class="hover:text-accent transition-colors">Contact</a></li>
        </ul>
      </div>

      {/* Sisanya tetap sama... */}
      <div class="space-y-6">
        <h4 class="font-bold text-lg">{content.legal}</h4>
        <ul class="space-y-3 text-sm text-primary-foreground/70">
          <li><a href="/terms" class="hover:text-accent transition-colors">Terms of Service</a></li>
          <li><a href="/privacy" class="hover:text-accent transition-colors">Privacy Policy</a></li>
        </ul>
      </div>

      <div class="space-y-6">
        <h4 class="font-bold text-lg">{content.contact}</h4>
        <ul class="space-y-4 text-sm text-primary-foreground/70">
          <li class="flex items-center gap-3">
             <a href="mailto:kamandanu.wijaya@gmail.com" class="hover:text-accent transition-colors">kamandanu.wijaya@gmail.com</a>
          </li>
          <li class="flex items-center gap-3">
             <a href="tel:+628122233129" class="hover:text-accent transition-colors">+62 812 2233 129</a>
          </li>
        </ul>
      </div>
    </div>
    
    {/* Copyright Section... */}
  </div>
</footer>

<style>
  /* Animasi yang lebih hidup: naik turun + goyang dikit */
  @keyframes float-fancy {
    0% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-15px) rotate(5deg); }
    100% { transform: translateY(0px) rotate(0deg); }
  }
  .animate-float-fancy {
    animation: float-fancy 5s ease-in-out infinite;
  }
</style>