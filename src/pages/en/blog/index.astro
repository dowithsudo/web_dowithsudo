---
// src/pages/en/blog/index.astro
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import BaseLayout from '@/layouts/BaseLayout.astro';

// 1. Fetch posts specifically from 'en/' directory
const allPosts = (await getCollection('blog', (entry) => entry.id.startsWith('en/')))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// 2. Separate Featured Post and Regular Posts
const featuredPost = allPosts[0];
const regularPosts = allPosts.slice(1);

// 3. Helper Reading Time with undefined protection
const getReadingTime = (content: string | undefined) => {
  const text = content || "";
  const wordsPerMinute = 200;
  const wordCount = text.split(/\s/g).length;
  return Math.ceil(wordCount / wordsPerMinute);
};

// 4. Unique categories filter
const categories = ["All", ...new Set(allPosts.map((post) => (post.data as any).category || "General"))];
---

<BaseLayout title="Blog">
  <main class="min-h-screen bg-white">
    {/* Hero Section */}
    <section class="py-12 md:py-20 bg-[#F8F9FA]">
      <div class="max-w-7xl mx-auto px-6">
        <div class="max-w-3xl">
          <h1 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6 tracking-tight">Blog</h1>
          <p class="text-lg text-slate-500 leading-relaxed">
            IT tips, tutorials, and deep insights to help your business stay ahead in the digital era.
          </p>
        </div>
      </div>
    </section>

    {/* Filter & Search Bar */}
    <section class="py-6 sticky top-20 bg-white/80 backdrop-blur-md z-30 border-b border-slate-100">
      <div class="max-w-7xl mx-auto px-6 flex flex-col md:flex-row gap-6 items-center justify-between">
        <div class="flex flex-wrap gap-2" id="category-filters">
          {categories.map((category) => (
            <button
              data-category={category}
              class="filter-btn inline-flex items-center justify-center rounded-full text-xs font-bold transition-all border border-slate-200 h-9 px-5 hover:border-[#26a69a] hover:text-[#26a69a] cursor-pointer"
            >
              {category}
            </button>
          ))}
        </div>
        
        <div class="relative w-full md:w-72">
          <input 
            type="text" 
            id="search-input"
            placeholder="Search articles..." 
            class="w-full pl-10 pr-4 py-2 bg-slate-50 border border-slate-200 rounded-full text-sm focus:outline-none focus:ring-2 focus:ring-[#26a69a]/50 focus:border-[#26a69a] transition-all"
          />
          <svg class="w-4 h-4 absolute left-4 top-2.5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
        </div>
      </div>
    </section>

    <section class="py-12 md:py-16">
      <div class="max-w-7xl mx-auto px-6">
        
        {/* Featured Post Section */}
        {featuredPost && (
          <div class="mb-16 blog-card featured-item" data-category={(featuredPost.data as any).category || "General"}>
            <a href={`/en/blog/${featuredPost.id.replace(/^en\//, '').replace(/\.(md|mdx)$/, '')}`} class="group">
              <div class="grid lg:grid-cols-12 gap-8 bg-white border border-slate-200 rounded-3xl overflow-hidden hover:border-[#26a69a]/50 transition-all duration-500 shadow-sm hover:shadow-xl">
                <div class="lg:col-span-7 aspect-video lg:aspect-auto overflow-hidden">
                  {featuredPost.data.cover && (
                    <Image 
                      src={featuredPost.data.cover}
                      alt={featuredPost.data.title}
                      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                      width={1200} height={675}
                    />
                  )}
                </div>
                <div class="lg:col-span-5 p-8 md:p-12 flex flex-col justify-center">
                   <span class="inline-block px-3 py-1 text-[10px] font-black uppercase tracking-[0.2em] text-[#26a69a] bg-[#26a69a]/10 rounded-full mb-6 w-fit">
                    {(featuredPost.data as any).category || "General"}
                  </span>
                  <h2 class="text-2xl md:text-4xl font-extrabold text-slate-900 mb-4 group-hover:text-[#26a69a] transition-colors leading-tight">
                    {featuredPost.data.title}
                  </h2>
                  <p class="text-slate-500 mb-8 line-clamp-3 text-base font-light">
                    {featuredPost.data.description}
                  </p>
                  <div class="flex items-center gap-4 text-[11px] font-bold text-slate-400 uppercase tracking-widest">
                    <time>{featuredPost.data.date.toLocaleDateString("en-US", { day: "numeric", month: "long", year: "numeric" })}</time>
                    <span>‚Ä¢</span>
                    <span>{getReadingTime(featuredPost.body)} MIN READ</span>
                  </div>
                </div>
              </div>
            </a>
          </div>
        )}

        {/* Regular Blog Grid */}
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8" id="blog-grid">
          {regularPosts.map((post) => {
            const slug = post.id.replace(/^en\//, '').replace(/\.(md|mdx)$/, '');
            const category = (post.data as any).category || "General";
            const readingTime = getReadingTime(post.body);

            return (
              <article class="blog-card group h-full" data-category={category}>
                <a href={`/en/blog/${slug}`} class="block h-full translate-y-0 hover:-translate-y-2 transition-all duration-500">
                  <div class="bg-white rounded-2xl border border-slate-200 overflow-hidden hover:border-[#26a69a]/50 transition-all duration-300 flex flex-col h-full shadow-sm hover:shadow-2xl">
                    <div class="relative aspect-video overflow-hidden">
                      {post.data.cover ? (
                        <Image 
                          src={post.data.cover} 
                          alt={post.data.title}
                          class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                          width={600} height={340}
                        />
                      ) : (
                        <div class="flex items-center justify-center h-full bg-slate-100 text-4xl opacity-20">üìù</div>
                      )}
                    </div>
                    
                    <div class="p-6 flex flex-col grow">
                      <span class="text-[10px] font-black uppercase tracking-widest text-[#26a69a] mb-3">
                        {category}
                      </span>
                      <h3 class="text-lg font-bold text-slate-900 mb-3 group-hover:text-[#26a69a] transition-colors line-clamp-2">
                        {post.data.title}
                      </h3>
                      <div class="mt-auto pt-4 border-t border-slate-50 flex items-center justify-between text-[10px] font-bold text-slate-400 uppercase tracking-tighter">
                        <time>{post.data.date.toLocaleDateString("en-US", { day: "numeric", month: "short", year: "numeric" })}</time>
                        <span>{readingTime} MIN READ</span>
                      </div>
                    </div>
                  </div>
                </a>
              </article>
            );
          })}
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<script>
  // Script is the same as ID version for filtering logic
  const buttons = document.querySelectorAll('.filter-btn');
  const cards = document.querySelectorAll('.blog-card');
  const searchInput = document.getElementById('search-input') as HTMLInputElement;

  let activeCategory = "All";
  let searchQuery = "";

  const filterPosts = () => {
    cards.forEach(card => {
      const cardCat = card.getAttribute('data-category');
      const cardTitle = card.querySelector('h2, h3')?.textContent?.toLowerCase() || "";
      
      const matchCategory = activeCategory === 'All' || cardCat === activeCategory;
      const matchSearch = cardTitle.includes(searchQuery.toLowerCase());

      if (matchCategory && matchSearch) {
        (card as HTMLElement).style.display = 'block';
      } else {
        (card as HTMLElement).style.display = 'none';
      }
    });
  };

  const updateActiveStyle = (selectedCat: string) => {
    buttons.forEach(btn => {
      const isSelected = btn.getAttribute('data-category') === selectedCat;
      if (isSelected) {
        btn.classList.add('bg-[#26a69a]', 'text-white', 'border-[#26a69a]');
        btn.classList.remove('bg-white', 'text-slate-900', 'border-slate-200');
      } else {
        btn.classList.remove('bg-[#26a69a]', 'text-white', 'border-[#26a69a]');
        btn.classList.add('bg-white', 'text-slate-900', 'border-slate-200');
      }
    });
  };

  updateActiveStyle("All");

  buttons.forEach(btn => {
    btn.addEventListener('click', () => {
      activeCategory = btn.getAttribute('data-category') || "All";
      updateActiveStyle(activeCategory);
      filterPosts();
    });
  });

  searchInput?.addEventListener('input', (e) => {
    searchQuery = (e.target as HTMLInputElement).value;
    filterPosts();
  });
</script>