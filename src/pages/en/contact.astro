---
import BaseLayout from '@/layouts/BaseLayout.astro';

// Use a prop to detect language or set manually for this file
const isEn = true; 
---

<BaseLayout title="Contact Me | DoWithSudo">
  <main class="bg-white min-h-screen pb-20">
    <header class="py-16 border-b border-slate-100 bg-slate-50/50 mb-12">
      <div class="max-w-4xl mx-auto px-6 text-center md:text-left">
        <h1 class="text-3xl md:text-5xl font-extrabold text-slate-900 mb-4 tracking-tight">
          Get in Touch
        </h1>
        <p class="text-lg text-slate-600 leading-relaxed max-w-2xl">
          Have questions about IT infrastructure or need enterprise-level technical consultation? 
          Feel free to reach out. I typically respond within 24 hours.
        </p>
      </div>
    </header>

    <div class="max-w-4xl mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-16">
        
        <div class="space-y-10">
          <div class="group">
            <h3 class="text-xs font-bold text-[#26a69a] uppercase tracking-widest mb-3">Full Name</h3>
            <p class="text-xl font-bold text-slate-900 group-hover:text-[#26a69a] transition-colors">
              Kamandanu Tresna Wijaya
            </p>
          </div>

          <div class="group">
            <h3 class="text-xs font-bold text-[#26a69a] uppercase tracking-widest mb-3">Email Address</h3>
            <a href="mailto:kamandanu.wijaya@gmail.com" class="text-xl font-bold text-slate-900 hover:text-[#26a69a] transition-colors wrap-break-word">
              kamandanu.wijaya@gmail.com
            </a>
          </div>

          <div class="group">
            <h3 class="text-xs font-bold text-[#26a69a] uppercase tracking-widest mb-3">Phone / WhatsApp</h3>
            <a href="https://wa.me/628122233129" class="text-xl font-bold text-slate-900 hover:text-[#26a69a] transition-colors">
              +62 812 2233 129
            </a>
          </div>

          <div class="pt-8 border-t border-slate-100">
            <h4 class="font-bold text-slate-900 mb-4">Typical Response Time</h4>
            <div class="space-y-3">
              <div class="flex items-center gap-3 text-sm text-slate-600">
                <div class="w-8 h-8 rounded-lg bg-slate-50 flex items-center justify-center text-[#26a69a]">‚úâÔ∏è</div>
                <span>Email: Within 24 hours</span>
              </div>
              <div class="flex items-center gap-3 text-sm text-slate-600">
                <div class="w-8 h-8 rounded-lg bg-slate-50 flex items-center justify-center text-[#26a69a]">üí¨</div>
                <span>WhatsApp: Within a few hours</span>
              </div>
              <div class="flex items-center gap-3 text-sm text-red-600 font-semibold">
                <div class="w-8 h-8 rounded-lg bg-red-50 flex items-center justify-center">üö®</div>
                <span>Emergency Support: 24/7 Available</span>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-slate-50 p-8 rounded-3xl border border-slate-100 shadow-sm">
          <h3 class="text-lg font-bold text-slate-900 mb-6">Send a Message</h3>
          <form class="space-y-5">
            <div>
              <label class="block text-xs font-bold text-slate-500 uppercase tracking-wider mb-2">Your Name *</label>
              <input 
                type="text" 
                placeholder="e.g. John Doe"
                class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:ring-2 focus:ring-[#26a69a] focus:border-transparent outline-none transition-all bg-white"
                required
              />
            </div>
            
            <div>
              <label class="block text-xs font-bold text-slate-500 uppercase tracking-wider mb-2">Subject *</label>
              <input 
                type="text" 
                placeholder="IT Consultation / Infrastructure Project"
                class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:ring-2 focus:ring-[#26a69a] focus:border-transparent outline-none transition-all bg-white"
                required
              />
            </div>

            <div>
              <label class="block text-xs font-bold text-slate-500 uppercase tracking-wider mb-2">Message *</label>
              <textarea 
                rows="4"
                placeholder="Describe your IT requirements or inquiry here..."
                class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:ring-2 focus:ring-[#26a69a] focus:border-transparent outline-none transition-all bg-white resize-none"
                required
              ></textarea>
            </div>

            <button 
              type="submit"
              class="w-full bg-[#26a69a] text-white font-bold py-4 rounded-xl hover:bg-[#1e8d82] active:scale-[0.98] transition-all flex items-center justify-center gap-3 shadow-lg shadow-[#26a69a]/20 group"
            >
              <span>Send Message</span>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform"><line x1="22" y1="2" x2="11" y2="13"/><polygon points="22 2 15 22 11 13 2 9 22 2"/></svg>
            </button>
          </form>
        </div>

      </div>
    </div>
  </main>
</BaseLayout>