---
import BaseLayout from '@/layouts/BaseLayout.astro';

const { isEn } = Astro.props; 
---

<BaseLayout title={isEn ? "Contact | DoWithSudo" : "Kontak | DoWithSudo"}>
  <main class="bg-white min-h-screen pb-20">
    <header class="py-16 border-b border-slate-100 bg-slate-50/50 mb-12">
      <div class="max-w-4xl mx-auto px-6">
        <h1 class="text-3xl md:text-5xl font-extrabold text-slate-900 mb-4 tracking-tight">
          {isEn ? "Get in Touch" : "Hubungi Saya"}
        </h1>
        <p class="text-lg text-slate-600 leading-relaxed">
          {isEn 
            ? "Have questions about IT infrastructure or need enterprise system consultation? Don't hesitate to reach out." 
            : "Punya pertanyaan mengenai infrastruktur IT atau butuh konsultasi terkait sistem enterprise? Jangan ragu untuk menghubungi saya."}
        </p>
      </div>
    </header>

    <div class="max-w-4xl mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-12">
        
        <div class="space-y-8">
          <div>
            <h2 class="text-xs font-bold text-[#26a69a] uppercase tracking-widest mb-4">{isEn ? "Full Name" : "Nama Lengkap"}</h2>
            <p class="text-xl font-bold text-slate-900">Kamandanu Tresna Wijaya</p>
          </div>

          <div>
            <h2 class="text-xs font-bold text-[#26a69a] uppercase tracking-widest mb-4">Email</h2>
            <a href="mailto:kamandanu.wijaya@gmail.com" class="text-xl font-bold text-slate-900 hover:text-[#26a69a] transition-colors">
              kamandanu.wijaya@gmail.com
            </a>
          </div>

          <div>
            <h2 class="text-xs font-bold text-[#26a69a] uppercase tracking-widest mb-4">WhatsApp</h2>
            <a href="https://wa.me/628122233129" class="text-xl font-bold text-slate-900 hover:text-[#26a69a] transition-colors">
              +62 812 2233 129
            </a>
          </div>

          <div class="pt-6 border-t border-slate-100">
            <h3 class="font-bold text-slate-900 mb-4">{isEn ? "Response Time" : "Waktu Respons"}</h3>
            <ul class="space-y-2 text-slate-600 text-sm">
              <li class="flex items-center gap-2">
                <span class="w-1.5 h-1.5 rounded-full bg-[#26a69a]"></span> Email: {isEn ? "Within 24 hours" : "Dalam 24 jam"}
              </li>
              <li class="flex items-center gap-2">
                <span class="w-1.5 h-1.5 rounded-full bg-[#26a69a]"></span> WhatsApp: {isEn ? "Within a few hours" : "Beberapa jam"}
              </li>
              <li class="flex items-center gap-2 text-red-600 font-medium">
                <span class="w-1.5 h-1.5 rounded-full bg-red-600"></span> Emergency: Available 24/7
              </li>
            </ul>
          </div>
        </div>

        <div class="bg-slate-50 p-8 rounded-3xl border border-slate-100">
          <form action="https://formspree.io/f/mpqzkdee" method="POST" class="space-y-4">
            <div>
              <label for="full-name" class="block text-sm font-bold text-slate-700 mb-2">{isEn ? "Your Name" : "Nama Lengkap"} *</label>
              <input 
                type="text" 
                name="name"
                id="full-name"
                placeholder={isEn ? "Enter your name" : "Masukkan nama Anda"}
                class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:ring-2 focus:ring-[#26a69a] focus:border-transparent outline-none transition-all bg-white"
                required
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-bold text-slate-700 mb-2">{isEn ? "Your Email" : "Email Anda"} *</label>
              <input 
                type="email" 
                name="email"
                id="email"
                placeholder="nama@email.com"
                class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:ring-2 focus:ring-[#26a69a] focus:border-transparent outline-none transition-all bg-white"
                required
              />
            </div>
            <div>
              <label for="subject" class="block text-sm font-bold text-slate-700 mb-2">{isEn ? "Subject" : "Judul Pesan"} *</label>
              <input 
                type="text" 
                name="subject"
                id="subject"
                placeholder={isEn ? "IT Consultation / Project" : "Subjek pesan Anda"}
                class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:ring-2 focus:ring-[#26a69a] focus:border-transparent outline-none transition-all bg-white"
                required
              />
            </div>
            <div>
              <label for="message" class="block text-sm font-bold text-slate-700 mb-2">{isEn ? "Message" : "Pesan"} *</label>
              <textarea 
                name="message"
                id="message"
                rows="4"
                placeholder={isEn ? "Describe your IT needs here..." : "Tuliskan kebutuhan IT atau pertanyaan Anda di sini..."}
                class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:ring-2 focus:ring-[#26a69a] focus:border-transparent outline-none transition-all bg-white"
                required
              ></textarea>
            </div>

            <input type="hidden" name="_next" value="https://dowithsudo.com/id" />

            <button 
              type="submit"
              class="w-full bg-[#26a69a] text-white font-bold py-4 rounded-xl hover:bg-[#1e8d82] transition-all flex items-center justify-center gap-2 shadow-lg shadow-[#26a69a]/20"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="22" y1="2" x2="11" y2="13"/><polygon points="22 2 15 22 11 13 2 9 22 2"/></svg>
              {isEn ? "Send Message" : "Kirim Pesan Sekarang"}
            </button>
          </form>
        </div>

      </div>
    </div>
  </main>
</BaseLayout>