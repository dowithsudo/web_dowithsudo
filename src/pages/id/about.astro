---
import BaseLayout from '@/layouts/BaseLayout.astro';

const sections = [
  { id: 'summary', title: 'Ringkasan Profesional' },
  { id: 'services', title: 'Layanan Utama' },
  { 
    id: 'skills', 
    title: 'Keahlian Teknis',
    sub: [
      { id: 'skills-server', title: 'Server & OS' },
      { id: 'skills-network', title: 'Jaringan & Infrastruktur' }
    ]
  },
  { id: 'experience', title: 'Pengalaman Kerja' },
  { id: 'contact', title: 'Kontak' }
];
---

<BaseLayout title="Tentang Saya | DoWithSudo">
  <main class="bg-white min-h-screen pb-20">
    <header class="py-12 border-b border-slate-100 bg-slate-50/50 mb-12">
      <div class="max-w-6xl mx-auto px-6">
        <h1 class="text-3xl md:text-4xl font-bold text-slate-900 mb-2">Profil Profesional</h1>
        <p class="text-slate-500">Freelance IT Support Professional</p>
      </div>
    </header>

    <div class="max-w-6xl mx-auto px-6">
      <div class="grid lg:grid-cols-4 gap-12 items-start">
        
        <div class="lg:col-span-3 space-y-12">
          
          <section id="summary" class="scroll-mt-24">
            <h2 class="text-2xl font-bold text-slate-900 mb-4 flex items-center gap-2">
              <span class="text-[#26a69a]">1.</span> Ringkasan Profesional
            </h2>
            <p class="text-slate-600 leading-relaxed italic border-l-4 border-slate-100 pl-6 py-2">
              Profesional IT berpengalaman dengan keahlian mendalam dalam administrasi server, infrastruktur jaringan, dan keamanan digital. Saya fokus menyediakan dukungan teknis on-demand untuk UMKM agar operasional bisnis berjalan aman, stabil, dan efisien.
            </p>
          </section>

          <section id="services" class="scroll-mt-24">
            <h2 class="text-2xl font-bold text-slate-900 mb-6">
              <span class="text-[#26a69a]">2.</span> Layanan Utama
            </h2>
            <ul class="grid md:grid-cols-2 gap-3 text-slate-600">
              {["Instalasi & Maintenance Server", "Desain & Troubleshooting Jaringan", "Manajemen Cloud (AWS, Azure)", "Audit Keamanan & IT Security", "Sistem CCTV & Keamanan Fisik", "Konsultasi IT On-Demand"].map(s => (
                <li class="flex items-center gap-3 p-3 rounded-lg bg-slate-50 border border-slate-100">
                  <span class="text-[#26a69a]">âœ“</span> {s}
                </li>
              ))}
            </ul>
          </section>

          <section id="skills" class="scroll-mt-24">
            <h2 class="text-2xl font-bold text-slate-900 mb-6">
              <span class="text-[#26a69a]">3.</span> Keahlian Teknis
            </h2>
            
            <div class="space-y-8">
              <div id="skills-server" class="scroll-mt-24 pl-4 border-l-2 border-[#26a69a]/20">
                <h3 class="text-lg font-bold text-slate-800 mb-2">3.1 Server & OS</h3>
                <p class="text-slate-600 text-sm leading-relaxed">Windows Server (2016-2022), Ubuntu Server, CentOS, Active Directory, DNS, DHCP, File & Print Server.</p>
              </div>

              <div id="skills-network" class="scroll-mt-24 pl-4 border-l-2 border-[#26a69a]/20">
                <h3 class="text-lg font-bold text-slate-800 mb-2">3.2 Jaringan & Infrastruktur</h3>
                <p class="text-slate-600 text-sm leading-relaxed">TCP/IP, VLAN, Routing/Switching (Cisco, MikroTik, Ubiquiti), Firewall, VPN (IPSec, OpenVPN), Load Balancing.</p>
              </div>
            </div>
          </section>

          <section id="experience" class="scroll-mt-24">
            <h2 class="text-2xl font-bold text-slate-900 mb-6">
              <span class="text-[#26a69a]">4.</span> Pengalaman Kerja
            </h2>
            <div class="bg-slate-900 text-white p-6 rounded-2xl shadow-lg">
              <h4 class="font-bold text-[#26a69a] mb-2">Proyek Infrastruktur IT - Manufaktur</h4>
              <p class="text-slate-300 text-sm">Redesain jaringan dan migrasi server untuk 200+ user. Implementasi sistem backup terpusat dan keamanan perimeter.</p>
            </div>
          </section>

          <section id="contact" class="scroll-mt-24">
            <h2 class="text-2xl font-bold text-slate-900 mb-6">
              <span class="text-[#26a69a]">5.</span> Informasi Kontak
            </h2>
            <div class="bg-white border border-slate-200 rounded-2xl p-6 flex flex-col md:flex-row gap-8">
              <div class="flex-1">
                <p class="text-xs font-bold text-slate-400 uppercase tracking-widest mb-1">Email</p>
                <p class="text-slate-900 font-semibold">contact@itsupport.com</p>
              </div>
              <div class="flex-1">
                <p class="text-xs font-bold text-slate-400 uppercase tracking-widest mb-1">WhatsApp</p>
                <p class="text-slate-900 font-semibold">+62 812 3456 7890</p>
              </div>
            </div>
          </section>
        </div>

        <aside class="hidden lg:block sticky top-24">
          <div class="bg-slate-50 border border-slate-200 rounded-2xl p-6">
            <h2 class="text-xs font-bold text-slate-400 uppercase tracking-[0.2em] mb-6">Daftar Isi</h2>
            <nav>
              <ul class="space-y-4 text-sm font-medium">
                {sections.map((item, idx) => (
                  <li>
                    <a href={`#${item.id}`} class="text-slate-600 hover:text-[#26a69a] transition-colors flex items-start gap-2">
                      <span class="text-slate-400">{idx + 1}.</span>
                      {item.title}
                    </a>
                    {item.sub && (
                      <ul class="ml-6 mt-2 space-y-2 border-l border-slate-200 pl-4">
                        {item.sub.map((sub, sIdx) => (
                          <li>
                            <a href={`#${sub.id}`} class="text-slate-400 hover:text-[#26a69a] text-xs">
                              {idx + 1}.{sIdx + 1} {sub.title}
                            </a>
                          </li>
                        ))}
                      </ul>
                    )}
                  </li>
                ))}
              </ul>
            </nav>
            <div class="mt-8 pt-6 border-t border-slate-200">
              <a href="/id/contact" class="w-full inline-flex items-center justify-center bg-[#26a69a] text-white py-2.5 rounded-xl text-sm font-bold hover:bg-[#26a69a]/90 transition-all shadow-sm">
                Hubungi Saya
              </a>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </main>
</BaseLayout>