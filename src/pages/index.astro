---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DoWithSudo | Connecting...</title>
    <meta http-equiv="refresh" content="2;url=/id/" />
    
    <script is:inline>
      const savedLang = localStorage.getItem('preferred-lang');
      const browserLang = navigator.language.toLowerCase();
      let targetLang = 'id'; 
      
      if (savedLang === 'en' || savedLang === 'id') {
        targetLang = savedLang;
      } else if (browserLang.startsWith('en')) {
        targetLang = 'en';
      }
      
      window.location.replace(`/${targetLang}/`);
    </script>
  </head>
  <body style="background: hsl(215 25% 10%); margin: 0; display: flex; justify-content: center; align-items: center; height: 100vh; font-family: sans-serif;">
    <div style="text-align: center;">
      <div style="width: 40px; height: 40px; border: 3px solid hsl(174 62% 40% / 0.2); border-top: 3px solid hsl(174 62% 40%); border-radius: 50%; animation: spin 1s linear infinite; margin: 0 auto 20px;"></div>
      <p style="color: white; font-size: 14px; letter-spacing: 0.05em; opacity: 0.8;">REDIRECTING...</p>
    </div>
    <style>@keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }</style>
  </body>
</html>